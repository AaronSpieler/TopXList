<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whynoteasy.topxlist">
    <!--Request permission so im able to export to to html-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--Request permission so im able to get files from galery-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!--Request permission so im able to saveFromBitmap file to download folder & sharing functions-->
    <!--<uses-permission android:name="android.permission.INTERNET" />-->

    <application
        android:name="com.whynoteasy.topxlist.general.TopXListApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">

        <activity
            android:name="com.whynoteasy.topxlist.general.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Launcher"
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--This is for the searchbox-->
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable_main_activity" />
            <!--This means that this activity is going to handle the search-->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.whynoteasy.topxlist.listActivities.XListCreateActivity"
            android:label="@string/title_activity_xlist_create"
            android:parentActivityName="com.whynoteasy.topxlist.general.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.whynoteasy.topxlist.listActivities.XListEditActivity"
            android:label="@string/title_activity_xlist_edit"
            android:parentActivityName="com.whynoteasy.topxlist.general.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.general.MainActivity" />
        </activity>
        <activity
            android:name="com.whynoteasy.topxlist.elemActivities.XElemCreateActivity"
            android:label="@string/title_activity_xelem_create"
            android:parentActivityName="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity" />
        </activity>
        <activity
            android:name="com.whynoteasy.topxlist.elemActivities.XElemEditActivity"
            android:label="@string/title_activity_xelem_edit"
            android:parentActivityName="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity" />
        </activity>
        <activity
            android:name="com.whynoteasy.topxlist.elemActivities.XElemViewActivity"
            android:label="@string/title_activity_xelem_view"
            android:parentActivityName="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity" />
        </activity>
        <activity
            android:name="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName="com.whynoteasy.topxlist.general.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.general.MainActivity" />
        </activity>
        <activity
            android:name="com.whynoteasy.topxlist.listActivities.XListViewLongDescriptionActivity"
            android:label="@string/title_activity_xlist_view_long_description"
            android:parentActivityName="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.elemActivities.XListViewCollapsingActivity" />
        </activity>
        <activity
            android:name="com.whynoteasy.topxlist.general.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.whynoteasy.topxlist.general.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.general.MainActivity" />
        </activity>
        <!--This is the external cropping Activity-->
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/> <!-- optional (needed if default theme has no action bar) -->
    </application>

</manifest>