<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whynoteasy.topxlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mainActivities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listActivities.XListCreateActivity"
            android:label="@string/title_activity_xlist_edit"
            android:parentActivityName=".mainActivities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".listActivities.XListEditActivity"
            android:label="@string/title_activity_xlist_edit"
            android:parentActivityName=".mainActivities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.mainActivities.MainActivity" />
        </activity>
        <activity
            android:name=".listActivities.XListViewActivity"
            android:label="@string/title_activity_xlist_view"
            android:parentActivityName=".mainActivities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.mainActivities.MainActivity" />
        </activity>
        <activity
            android:name=".elemActivities.XElemCreateActivity"
            android:label="@string/title_activity_xelem_create"
            android:parentActivityName=".listActivities.XListViewActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whynoteasy.topxlist.listActivities.XListViewActivity" />
        </activity>
    </application>

</manifest>