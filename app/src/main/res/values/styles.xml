<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--changes color of all kinds of text but also some background colors-->
        <item name="colorPrimary">@color/middleBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/plain_white</item>

        <!--hint text color-->
        <item name="android:textColorHint">@color/middleDarkBlue</item>

        <!--Chante text font to open sans-->
        <item name="android:textViewStyle">@style/OpenSansTextViewStyle</item>
        <item name="android:buttonStyle">@style/OpenSansButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Styling the settings fragment-->
    <style name="SettingsFragmentStyle">
        <item name="colorAccent">@color/darkBlue</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textColorSecondary">@color/custom_grey</item>
        <item name="android:textColorHint">@color/darkBlue</item>
    </style>

    <!--Chante text font to open sans-->
    <style name="OpenSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
    <style name="OpenSansButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <!--this is for the Alert Dialog-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/superDarkBlue</item>
        <item name="android:textColorPrimary">@color/superDarkBlue</item>
        <item name="android:background">@color/lightBlue</item>
    </style>

    <!--splash screen stuff-->
    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

</resources>
