<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xlist_root_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whynoteasy.topxlist.listActivity.XListEdit">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/xlist_constraint_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <ScrollView
            android:id="@+id/xlist_edit_cards"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/xlist_edit_save_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/xlist_cards_constraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/xlist_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_defaults"
                    app:cardUseCompatPadding="true">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/xlist_name_text_constraint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/xlist_title_label"
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:background="@drawable/list_edit_fragment_card_left_rounded"
                            android:gravity="center"
                            android:text="@string/xlist_edit_title_label"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/xlist_title_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:background="@drawable/list_edit_fragment_card_right_rounded"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/xlist_title_label"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/xlist_edit_save_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/darkBlue"
            android:text="@string/edit_save_button"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
